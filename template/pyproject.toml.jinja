[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" }
]
requires-python = ">=3.12"
dependencies = [
    "hydra-core>=1.3.2",
    "hydra-submitit-launcher>=1.2.0",
    "lightning>=2.5.0.post0",
    "requests>=2.32.3",
    "tensorboard>=2.19.0",
    "torchaudio>=2.6.0",
    "torchmetrics>=1.6.3",
    "torchvision>=0.21.0",
]

[project.scripts]
train = "{{ project_name }}.train:train"
infer = "{{ project_name }}.infer:infer"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
